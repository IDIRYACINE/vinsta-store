{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "outDir": "./dist",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@admin/*": ["./src/*"],
      "@vinstacore": ["../vinstacore/src/"],
    },
  },
  "references": [
    { "path": "../vinstacore" }
  ],
  "include": [ "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
