{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "declaration": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./dist",
    "composite": false,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": false,
    "isolatedModules": false,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@storefront/*": ["*"],
     
    }
  },
  "include": [ "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules","dist"]
}